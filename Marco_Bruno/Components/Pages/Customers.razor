@page "/customers"
@rendermode InteractiveServer

<PageTitle>Customers</PageTitle>

<h1>Customers</h1>

@if (IsLoading)
{
    <p><em>Loading customers...</em></p>
}
else if (!string.IsNullOrWhiteSpace(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="ShowCreate">Add Customer</button>
    </div>

    @* ADDED: Create / Edit form *@
    @if (ShowForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <strong>@(IsEditMode ? "Edit Customer" : "Create Customer")</strong>
            </div>
            <div class="card-body">
                <EditForm Model="FormModel" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator/>
                    <ValidationSummary/>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">First Name</label>
                            <InputText class="form-control" @bind-Value="FormModel.FirstName"/>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Last Name</label>
                            <InputText class="form-control" @bind-Value="FormModel.LastName"/>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <InputText class="form-control" @bind-Value="FormModel.Email"/>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phone Number</label>
                            <InputText class="form-control" @bind-Value="FormModel.PhoneNumber"/>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Driver License Number</label>
                            <InputText class="form-control" @bind-Value="FormModel.DriverLicenseNumber"/>
                        </div>

                        <div class="col-md-6 mb-3 d-flex align-items-end">
                            <div class="form-check">
                                <InputCheckbox class="form-check-input" @bind-Value="FormModel.IsActive"/>
                                <label class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <button class="btn btn-success" type="submit" disabled="@IsBusy">
                            @(IsEditMode ? "Save Changes" : "Create")
                        </button>
                        <button class="btn btn-secondary" type="button" @onclick="CancelForm" disabled="@IsBusy">
                            Cancel
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    @* ADDED: Customers table *@
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>First</th>
            <th>Last</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Active</th>
            <th style="width: 220px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (CustomerDto.Count == 0)
        {
            <tr>
                <td colspan="7"><em>No customers found.</em></td>
            </tr>
        }
        else
        {
            @foreach (var c in CustomerDto)
            {
                <tr>
                    <td>@c.CustomerId</td>
                    <td>@c.FirstName</td>
                    <td>@c.LastName</td>
                    <td>@c.Email</td>
                    <td>@c.PhoneNumber</td>
                    <td>@(c.IsActive ? "Yes" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditCustomer(c)">
                            Edit
                        </button>

                        <button class="btn btn-sm btn-outline-danger"
                                @onclick="() => SoftDeleteCustomer(c.CustomerId)"
                                disabled="@IsBusy">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
}

